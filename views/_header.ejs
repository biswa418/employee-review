<header>
    <div id="logo">
        <a class="d-flex align-items-center" href="/">
            <i class="fa-solid fa-magnifying-glass"></i>
            <h1 class="ms-2" style="font-weight: 600;">Employee Review</h1>
        </a>
    </div>

    <div id="users-action">
        <ul>
            <% if (locals.user){%>
                <li>
                    <a href="/users/Profile/<%= user.id %>">
                        <%= user.name %>
                    </a>
                </li>

                <li>
                    <a href="/users/sign-out">Sign out</a>
                </li>

                <%} else{%>
                    <li>
                        <a href="/users/sign-in">Sign in</a>
                    </li>

                    <li>
                        <a href="/users/sign-up">Sign up</a>
                    </li>

                    <%}%>
        </ul>
    </div>
</header>